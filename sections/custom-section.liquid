<section>
  <p>{{ section.settings.custom_text }}</p>
  <h2>Imagen fuera del blocks</h2>
  <div>
    {% for block in section.blocks %}
      {% case block.type %}
          <h2>{{ block.settings.custom_title_block }}</h2>
          {{ block.settings.image | image_url: width: 500 | image_tag }}
      {% endcase %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Section name",
  "tag": "section",
  "class": "custom_section",
  "settings": [
    {
      "type": "text",
      "id": "custom_text",
      "label": "Título de la sección"
    },

        {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         }
  ],
  "blocks": [
   {
     "name": "Custom Section Blocks",
     "type": "customizable_type",
     "settings": [
        {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         },
        {
      "type": "text",
      "id": "custom_title_block",
      "label": "Título del bloque"
    },

     ]
   }
  ],
"presets": [
  {
    "name": "Custom Section",
  }
]
}
{% endschema %}
